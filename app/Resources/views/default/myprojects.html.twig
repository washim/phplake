{% extends 'base.html.twig' %}
{% block body %}
<div class="col-md-12">
  <section class="page-content-header">
    <h1><i class="fa fa-list"></i> My Projects</h1>
  </section>
</div>
<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-body table-responsive">
      <table id="datatable" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>Project Name</th>
          <th>Category</th>
          <th>Environment</th>
          <th>Subscription</th>
          <th>Amount</th>
          <th>Created</th>
          <th>Next Due Date</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
        <tr>
          <td><a href="{{path('myproject_details', {'id':project.id})}}">{{project.name}}</a></td>
          <td>{{project.category}}</td>
          <td>
            {% for site in project.sites %}
            <a href="http://{{site.domain}}" target="_blank">http://{{site.domain}}</a>{% if not loop.last %}<br>{% endif %}
            {% endfor %}
          </td>
          <td>{{project.subscription}}</td>
          <td>{{project.price}} INR</td>
          <td>{{project.createdAt|date('d-m-Y')}}</td>
          <td>{{project.duedate}}</td>
        </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
          <th>Project Name</th>
          <th>Category</th>
          <th>Environment</th>
          <th>Subscription</th>
          <th>Amount</th>
          <th>Created</th>
          <th>Next Due Date</th>
        </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
{% endblock %}